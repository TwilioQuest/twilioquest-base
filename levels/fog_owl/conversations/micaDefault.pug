mixin dossier
  response#dossier.
    !{getTranslatedString('fog_owl.mica.dossier_response')}

mixin about
  response#about.
    !{getTranslatedString('fog_owl.mica.about_response')}

mixin whats_this
  response#whats_this.
    !{getTranslatedString('fog_owl.mica.whats_this_response')}

conversation(display_name="Mica")
  case lastResponse
    when "dossier"
      statement#dossier
      responses
        +whats_this

    when "about"
      statement#about
      responses
        +dossier

    when "whats_this"
      statement#whats_this
      responses
        +about

    default
      statement#default
      responses
        +whats_this
        +about

  statements
    statement#dossier
      text.
        !{getTranslatedString('fog_owl.mica.dossier')}
        
    statement#whats_this
      text.
        !{getTranslatedString('fog_owl.mica.whats_this')}

    statement#about
      text.
        !{getTranslatedString('fog_owl.mica.about')}

    statement#default
      text.
        !{getTranslatedString('fog_owl.mica.default')}
